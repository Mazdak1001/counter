<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sepehr.sa_sh.abfacounter01.Activities.StartupActivity"
    tools:showIn="@layout/app_bar_startup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/startup_content_wrapper"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:background="@drawable/_teh1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:visibility="invisible">
                <LinearLayout
                    android:id="@+id/load"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/startup_items_shape"
                    android:layout_margin="3dp"
                    android:clickable="true">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_archive_dark_48dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:scaleType="fitCenter"
                        android:clickable="false"/>
                    <TextView
                        android:clickable="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="جهت بارگیری اطلاعات جدید روی دستگاه از این گزینه استفاده فرمایید"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/startup_items_shape"
                    android:layout_margin="3dp"
                    android:clickable="true">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_unarchive_dark_48dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:scaleType="fitCenter"
                        android:clickable="false"/>
                    <TextView
                        android:clickable="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="جهت تخلیه اطلاعات قدیمی از دستگاه ، از این گزینه استفاده فرمایید"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:visibility="invisible">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/startup_items_shape"
                    android:layout_margin="3dp"
                    android:clickable="true">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_assignment_black_48dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:scaleType="fitCenter"
                        android:clickable="false"/>
                    <TextView
                        android:clickable="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="جهت نمایش اطلاعات بارگیری شده و ثبت شماره کنتور و وضعیت متناظر آن"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/startup_items_shape"
                    android:layout_margin="3dp"
                    android:clickable="true">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_place_black_48dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:scaleType="fitCenter"
                        android:clickable="false"/>
                    <TextView
                        android:clickable="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="این قسمت توسط تیم توسعه نرم افزار قرائت کنتور در حال تکمیل است"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:visibility="invisible">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/startup_items_shape"
                    android:layout_margin="3dp"
                    android:clickable="true">
                    <com.andexert.library.RippleView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/more2"
                        rv_centered="true"
                        app:rv_color="@color/black">
                        <ImageView
                            android:clickable="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_flash_on_black_48dp"
                            android:background="@null"
                            android:contentDescription="@null"
                            android:scaleType="fitCenter"/>
                    </com.andexert.library.RippleView>
                        <TextView
                            android:clickable="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="جهت روشن و خاموش کردن فلاش دستگاه از این گزینه استفاده فرمایید"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/startup_items_shape"
                    android:layout_margin="3dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_insert_chart_black_48dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:scaleType="fitCenter"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="جهت نمایش گزارشات قرائت و مشاهده آمار کارکرد استفاده فرمایید"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:background="?attr/colorPrimary"
            android:padding="8dp">
            <android.support.design.widget.TabLayout
                android:id="@+id/startTabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabMode="fixed"
                app:tabGravity="center"
                android:background="?attr/colorPrimary"
                android:layout_marginBottom="6dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/textColor" />
            <android.support.v4.view.ViewPager
                android:id="@+id/startViewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"  />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
