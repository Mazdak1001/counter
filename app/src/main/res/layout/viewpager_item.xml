<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:id="@+id/trackNumber"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/preNumber"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:background="@drawable/button_shape"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="26sp"
                android:text="رقم قبلی"
                android:onClick="displayPreNumber"
                android:textColor="#EEE"
                android:visibility="visible" />
            <TextView
                android:id="@+id/shomareBadane"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:padding="0dp"
                android:text="1234567890"
                android:background="@drawable/border_text_view"
                android:gravity="top"
                android:textSize="28sp"
                android:textColor="#EEE"
                android:textAlignment="center"
                android:layout_gravity="center"/>
                <!--android:letterSpacing="0.2"-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:background="@drawable/border_text_view">
                <TextView
                    android:id="@+id/preDateLabel"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:text="تاریخ قبلی"
                    android:textSize="10sp"
                    android:gravity="center_horizontal|center_vertical"
                    android:textColor="#EEE"/>
                <TextView
                    android:id="@+id/preDate"
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:layout_height="0dp"
                    android:textSize="35sp"
                    android:textColor="#EEE"
                    android:textStyle="bold"
                    android:text="0"
                    android:gravity="center_horizontal|center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:background="@drawable/border_text_view">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/qotrLabel"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="قطر انشعاب"
                        android:textSize="10sp"
                        android:gravity="right|center_vertical"
                        android:textColor="#EEE"/>
                    <TextView
                        android:id="@+id/qotrSifoonLabel"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="قطر سیفون"
                        android:textSize="10sp"
                        android:gravity="left|center_vertical"
                        android:textColor="#EEE"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/qotr"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textSize="35sp"
                        android:textColor="#EEE"
                        android:textStyle="bold"
                        android:text="0"
                        android:gravity="right|center_vertical"/>
                    <TextView
                        android:id="@+id/qotrSifoon"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textSize="35sp"
                        android:textColor="#EEE"
                        android:textStyle="bold"
                        android:text="100"
                        android:gravity="left|center_vertical"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:background="@drawable/border_text_view">
                <TextView
                    android:id="@+id/tedadMaskooniLabel"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:text="تعداد مسکونی"
                    android:textSize="10sp"
                    android:gravity="center_horizontal|center_vertical"
                    android:textColor="#EEE"/>
                <TextView
                    android:id="@+id/tedadMaskooni"
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:layout_height="0dp"
                    android:textSize="35sp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:text="0"
                    android:gravity="center_horizontal|center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:background="@drawable/border_text_view">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:text="ت غیر مسکونی"
                    android:textSize="10sp"
                    android:gravity="center_horizontal|center_vertical"
                    android:textColor="#EEE"/>
                <TextView
                    android:id="@+id/tedadTejari"
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:layout_height="0dp"
                    android:textSize="35sp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:text="1"
                    android:gravity="center_horizontal|center_vertical"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:background="@drawable/border_text_view">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:text="آحاد فروش"
                    android:textSize="10sp"
                    android:gravity="center_horizontal|center_vertical"
                    android:textColor="#EEE"/>
                <TextView
                    android:id="@+id/tedadKol"
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:layout_height="0dp"
                    android:textSize="35sp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:text="1"
                    android:gravity="center_horizontal|center_vertical"/>

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/eshterak"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:text="اشتراک"
            android:background="@drawable/border_text_view"
            android:gravity="center"
            android:textSize="35sp"
            android:textColor="#EEE"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:baselineAligned="true">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:background="@drawable/button_shape"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="35sp"
                android:text="ثبت"
                android:id="@+id/buttonRegister"
                android:onClick="registerCounterNumber"
                android:textColor="#EEE" />
            <EditText
                android:id="@+id/counterNumberEditText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:paddingTop="2dp"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="38sp"
                android:textAlignment="center"
                android:background="@drawable/border_text_view"
                android:hint="رقم کنتور"
                android:inputType="number"
                android:privateImeOptions=""
                android:digits="0123456789"
                android:ellipsize="start"
                android:maxLines="1"
                android:focusableInTouchMode="true"
                android:textColorHint="#EEE"
                android:textColor="#EEE"
                android:shadowColor="@color/colorAccent"
                android:shadowRadius="3"
                android:shadowDx="1.6"
                android:maxLength="7"/>
        </LinearLayout>

        <TextView
            android:id="@+id/karbari"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:text="مسکونی"
            android:background="@drawable/border_text_view"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="35sp"
            android:textColor="#EEE"/>


        <com.ms.square.android.expandabletextview.ExpandableTextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:background="@drawable/border_text_view"
            android:gravity="center_horizontal|center_vertical"
            expandableTextView:maxCollapsedLines="1"
            expandableTextView:animDuration="400">
            <TextView
                android:id="@id/expandable_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="35sp"
                android:textColor="#EEE"
                android:text="آدرس"/>
            <ImageButton
                android:id="@id/expand_collapse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_gravity="left|bottom"
                android:background="@android:color/transparent"/>
        </com.ms.square.android.expandabletextview.ExpandableTextView>
        <TextView
            android:id="@+id/billId"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_marginBottom="3dp"
            android:padding="2dp"
            android:text="شناسه"
            android:background="@drawable/border_text_view"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="35sp"
            android:textColor="#EEE"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/radif"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_marginBottom="3dp"
            android:padding="2dp"
            android:text="شناسه"
            android:background="@drawable/border_text_view"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="35sp"
            android:textColor="#EEE"/>
        <TextView
            android:id="@+id/firstLastName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:background="@drawable/border_text_view"
            android:text=""
            android:gravity="center"
            android:textSize="35sp"
            android:textColor="#EEE"/>
        <com.rey.material.widget.Spinner
            style="@style/Material.Widget.Spinner"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:background="@drawable/border_text_view"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="35sp"
            app:rd_style="@style/MySpinnerStyle"
            android:id="@+id/spinnerCounterState"
            android:spinnerMode="dropdown"
            android:textColor="#EEE"
            android:popupBackground="@color/colorPrimary"
            android:onClick="spinnerCounterStateClick"
            />
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
